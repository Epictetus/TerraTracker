- content_for(:title, 'Company User')
.row
  .span2
    = render :partial => "shared/sidebar"
  .span10
    %h1 Company User
    %h3 Name
    %p= "#{@user.firstname} #{@user.lastname}"
    %h3 Role
    %p= @user.owns_company ? "Owner" : "User"
    %h3 Email
    %p= @user.email
    %hr
    = link_to "Back to Company", company_index_path, :class => "btn"
