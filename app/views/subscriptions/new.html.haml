- content_for(:title, 'New Payment Plan')
.row
  .span2
    = render :partial => "shared/account_sidebar"
  .span10
    %h1 New Payment Plan
    = simple_form_for(@subscription, :html => {:class => 'form-horizontal' }) do |f|
      - if @subscription.errors.any?
        .alert-message.block-message.error
          %p= "#{pluralize(@subscription.errors.count, "problem")} with your registration:"
          .errors
            - @subscription.errors.full_messages.each do |msg|
              %p= msg
      = f.hidden_field :stripe_token
      = f.hidden_field :last_4_digits
      .control-group= f.input :plan, :collection => @subscription.available_plans, :selected => params[:plan], :include_blank => false, :label => 'Plan'
      .control-group= f.input :credit_card_number, :label => 'Credit Card Number'
      .control-group= f.input :cvv, :label => 'Security code (CVV)'
      .control-group= f.input :expiry_date, :as => :date, :label => 'Expiry Date', :start_year => Date.today.year, :end_year => Date.today.year + 25, :order => [:month, :year], :discard_day => true, :use_month_numbers => true
      = f.button :submit, "Request", :class => 'btn btn-primary'