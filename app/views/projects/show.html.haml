- content_for(:title, @project.name)
.row
  .span2
    = render :partial => "shared/sidebar"
  .span10
    %h1= @project.name
    %p
      = link_to "View All Projects", projects_path, :class => 'btn'
      %a.btn{ :href => edit_project_path(@project) }
        %i.icon-pencil
        Edit Project
      %a.btn.btn-danger{ 'data-method' => :delete, 'data-confirm' => 'Are you sure?', :href => project_path(@project) }
        %i.icon-trash.icon-white
        Delete Project
    %h3 Tasks
    = render :partial => "tasks/tasks"
    = link_to "Add Task", new_task_path, :class => 'btn btn-primary'
    %hr
    %h3 Users
    - if @project.project_users.count > 0
      = render :partial => "project_users/project_users"
    - else
      %p There are no project users assigned.
    = link_to "Add Project User", new_project_user_path(@project), :class => 'btn btn-primary'
