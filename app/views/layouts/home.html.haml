%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :charset => "utf-8" }
    %title= 'TimeTracker - ' + yield(:title)
    = stylesheet_link_tag     "application"
    = javascript_include_tag  "application"
    = csrf_meta_tags
  %body{ "data-spy" => "scroll", "class" => "home-body"}
    %div.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{ :class => "btn btn-navbar", "data-toggle" => "collapse", "data-target" => ".nav-collapse" }
          = link_to(image_tag("logo.png"), root_path, :class => "brand")
          %div.nav-collapse
            %ul.nav
              - if current_user
                %li= link_to "Dashboard", dashboard_index_path
                %li= link_to "Logout", destroy_user_session_path, :method => :delete
              - else
                %li= link_to "Home", root_path
                %li= link_to "Login", new_user_session_path
    #notification
      = render :partial => "shared/flash_messages", :locals => {:flash => flash}
    .home
      .container
        .head
          .thumbnail
            = image_tag("logo_large.png")
          %p Time management made easy
        .main
          = yield
      %footer
        %p &copy; #{Date.today.year} TerraCoding Ltd