- content_for(:title, 'Reports')
.row
  .span2
    = render :partial => "shared/sidebar"
  .span10
    %h1 Reports
    %p Here you can create your time tracking reports.
    = simple_form_for "report", :html => {:class => 'form-horizontal'} do |f|
      .control-group
        .control-label= f.label :timeframe
        .controls= f.select :timeframe, @timeframes, :include_blank => false, :label => 'Project'
      .control-group
        .control-label= f.label :project
        .controls= f.select :project, @projects.collect{ |u| [u[:name], u[:id]] }, :include_blank => false, :label => 'Project'
      .control-group
        .control-label= f.label :task
        .controls= f.select :task, @tasks.collect{ |u| [u[:name], u[:id]] }, :include_blank => false, :label => 'Project'
      .control-group
        .control-label= f.label :user
        .controls= f.select :user, @users.collect{ |u| ["#{u[:firstname]} #{u[:lastname]}", u[:id]] }, :include_blank => false, :label => 'Project'
      = f.submit "Generate Report", :class => 'btn btn-primary'