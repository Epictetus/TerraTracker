- content_for(:title, 'Create your account')

%div{ :class => "container login"}
  = render :partial => "shared/flash_messages", :locals => {:flash => flash}
  .row
    .session-form
      %h2 Signup
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
        .control-group= f.input :firstname, :required => true, :autofocus => true, :class => 'input-xlarge', :label => 'First Name'
        .control-group= f.input :lastname, :required => true, :class => 'input-xlarge', :label => 'Last Name'
        .control-group= f.input :email, :required => true, :class => 'input-xlarge'
        .control-group= f.input :password, :required => true, :class => 'input-xlarge'
        .control-group= f.input :password_confirmation, :required => true, :class => 'input-xlarge'
        = f.button :submit, "Create my account", :class => 'btn btn-primary'
      = render :partial => "devise/shared/links"